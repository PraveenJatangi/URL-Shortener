<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>URL Shortner </h1>
    <% if (locals.id) { %>
     <p>url genrated:http://localhost:8001/url/<%= id %></p>
    <% } %>
     <div>
        <form method="POST" action="/url">
            <label for="url">Enter your url here</label>
            <input type="text" name="url" >
            <button type="submit">Generate</button>
        </form>
     </div>
     <div>
        <% if (locals.url) { %>
         
       
        <table>
            <thead>
                <th>s.no</th>
                <th>short id </th>
                <th>redirect url</th>
                <th>no of clicks</th>
            </thead>
            <tbody>
                
                <% url.forEach((ele,index) => { %>
                 <tr>
                    <td><%= index+1 %></td>
                    <td><%= ele.shortid %></td>
                    <td><%= ele.originaUrl %></td>
                    <td><%= ele.visitHistory.length %></td>
                 </tr>
                <% }) %>
          
            </tbody>
        </table>
        <% } %>
     </div>
    
</body>
</html>